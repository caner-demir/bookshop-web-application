@model Bookshop.Models.ShoppingCart

<div class="row">
    <div class="d-none d-lg-block col-lg-1 text-center py-2">
        <img src="@Model.Product.ImageUrl" class="rounded" style="width:100%" />
    </div>
    <div class="col-12 text-sm-center col-lg-6 text-lg-left">
        <h5><strong>@Model.Product.Title</strong></h5>
        <p><small>@Html.Raw(Model.Product.Description)</small></p>
    </div>
    <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
        <div class="col-4 text-md-right" style="padding-top:5px;">
            <h6><strong>$@Model.Price<span class="text-muted"> x</span> @Model.Count </strong></h6>
        </div>
        <div class="col-6 col-sm-4 col-lg-6">
            <div class="float-right mx-1">
                <button onclick="UpdatePlus(this, '/Customer/Cart/PlusPartial?cartId=@Model.Id')" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <div class="float-right mx-1">
                <button onclick="UpdateMinus(this, '/Customer/Cart/MinusPartial?cartId=@Model.Id')" class="btn btn-danger">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="col-2 col-sm-4 col-lg-2 text-right">
            <a asp-action="remove" asp-route-cartId="@Model.Id" class="btn btn-danger">
                <i class="fas fa-trash"></i>
            </a>
        </div>
    </div>
</div>
<hr />